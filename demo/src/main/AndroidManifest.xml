<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.baidu.app">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">

        <activity
                android:name="com.example.baidu.app.activity.RouterActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.example.baidu.app.activity.StackScrollDemoActivity"
                android:label="@string/app_name">
        </activity>

        <activity
                android:name="com.example.baidu.app.activity.DoubleStackScrollActivity"
                android:label="@string/app_name">
        </activity>

        <activity
                android:name="com.example.baidu.app.activity.TimeSetActivity"
                android:label="@string/app_name">
        </activity>
    </application>

</manifest>
